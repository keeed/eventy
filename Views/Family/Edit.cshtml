@model eventy.Models.Family

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Family</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.OldFamilyNumber))
            {
                <div class="form-group">
                    <label asp-for="OldFamilyNumber" class="control-label"></label>
                    <input asp-for="OldFamilyNumber" class="form-control disabled" readonly />
                    <span asp-validation-for="OldFamilyNumber" class="text-danger"></span>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.OldFamilyNumber))
            {
                <div class="form-group">
                    <label asp-for="OldControlNumber" class="control-label"></label>
                    <input asp-for="OldControlNumber" class="form-control disabled" readonly />
                    <span asp-validation-for="OldControlNumber" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
