@model eventy.Models.Family

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this family?</h3>
<div>
    <h4>@Html.DisplayFor(model => Model.Name)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Family Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        @if (!string.IsNullOrEmpty(Model.OldControlNumber))
        {
            <hr />
            <dt>
                Old Control Number
            </dt>
            <dd>
                @Html.DisplayFor(model => model.OldControlNumber)
            </dd>
        }
        @if (!string.IsNullOrEmpty(Model.OldFamilyNumber))
        {
            <dt>
                Old Family Number
            </dt>
            <dd>
                @Html.DisplayFor(model => model.OldFamilyNumber)
            </dd>
        }
        <hr />
        <dt>
            Last modified date
        </dt>
        <dd>
            @{
                DateTime dateModifiedLocal = Model.DateModified.Value.ToLocalTime();
            }
            @Html.DisplayFor(model => dateModifiedLocal)
        </dd>
        <dt>
            Last modified by
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserModified)
        </dd>
        <dt>
            Date Created
        </dt>
        <dd>
            @{
                DateTime dateCreated = Model.DateCreated.Value.ToLocalTime();
            }
            @Html.DisplayFor(model => dateCreated)
        </dd>
        <dt>
            Created by
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserCreated)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-default">Back to List</a>
    </form>
</div>
