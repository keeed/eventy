@model eventy.Models.FamilyMemberViewModels.CreateFamilyMemberViewModel

@{
    ViewData["Title"] = "Create Family Member";
}

<h2>Create</h2>

<h4>Family Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FamilyId" class="control-label">Family Id (Optional)</label>
                <input asp-for="FamilyId" class="form-control" min="0" />
                <span asp-validation-for="FamilyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Full Name</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <!-- <div class="form-group">
                <label asp-for="Gender" class="control-label">Gender</label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div> -->
            <div class="form-group">
                <label for="SelectedGender">Gender</label>
                <select class="form-control" asp-for="SelectedGender">
                @foreach(var item in Model.Genders)
                {
                    <option>@item.Value</option>
                }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label">Birthday (dd-mm-yyyy)</label>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="IsHeadOfFamily">Is Head of Family</label>
                <select class="form-control" asp-for="IsHeadOfFamily">
                @foreach(var item in Model.HeadOfFamily)
                {
                    <option>@item.Value</option>
                }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
